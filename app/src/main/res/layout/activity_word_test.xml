<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constranted"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studerande.japanesewords.wordTestActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/question_tw"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textColor="#717171"
        android:padding="20px"
        android:background="#EAEAEA"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:ems="10"
        android:maxLines="100"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/q_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginEnd="17dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/question_tw"
        app:layout_constraintRight_toRightOf="@+id/question_tw"
        android:layout_marginRight="17dp" />

    <Button
        android:id="@+id/ansr_btn3"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:onClick="onClick"
        android:text="Button"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ansr_btn4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp" />>

    <Button
        android:id="@+id/ansr_btn2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:onClick="onClick"
        android:text="Button"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/ansr_btn1"
        app:layout_constraintBaseline_toBaselineOf="@+id/ansr_btn4"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ansr_btn1" />

    <Button
        android:id="@+id/ansr_btn4"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:onClick="onClick"
        android:text="Button"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/ansr_btn3"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/ansr_btn3" />

    <Button
        android:id="@+id/ansr_btn1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:onClick="onClick"
        android:text="Button"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/ansr_btn3"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ansr_btn2"
        android:layout_marginEnd="14dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="14dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="nextQuestion"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:text="RESULTS"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_tw"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
